<%- include('../partials/header') %>
    <section id='show-page'>
       <div><h1>Your Routines:</h1></div><br>
        <div>Name:</div>
        <div>
            <%= routine.name %>
        </div>
        <div>Exercise:</div>
        <div>
            <%= routine.exercises %> 
        </div>
        <div>Sets:</div>
        <div>
            <%= routine.sets %> 
        </div>
        <div>Reps:</div>
