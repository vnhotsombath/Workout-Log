<body>

<main>
        <h1>Add Your Routine</h1>
        <form id='new-form' action='/routines' method='POST'>
            <label>Routine Name:</label>
            <input type='text' name='name'>
            <label>Exercise:</label>
            <input type='text' name='exercises'>
            <label>Sets:</label>
            <input type='text' name='sets'>
            <label>Reps:</label>
            <input type='text' name='reps'>
            <label>Weight:</label>
            <input type='text' name='weight'>
            <label>Date:</label>
            <input type='datetime-local' name='date' />
            <label>Completed:</label>
            <input type='checkbox' name='completed' checked></label>
            <input type='submit' value='Add Routine'>
        </form>
</body>
</main>

